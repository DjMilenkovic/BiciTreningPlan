<UserControl x:Class="BiciTreningPlan.View.ChangeRider.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BiciTreningPlan.View.ChangeRider"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!--Loaded="UserControl_Loaded"-->
    <StackPanel Orientation="Vertical">
        <DataGrid Name="dtUsers" IsReadOnly="True" ColumnWidth="*" VerticalScrollBarVisibility="Auto" CanUserAddRows="False" CanUserDeleteRows="False" SelectionUnit="FullRow" SelectionMode="Extended" Margin="10"></DataGrid>
        <Button Name="btnLogin" Style="{StaticResource buttonStyle}" Foreground="#ffffff" MinHeight="30" MinWidth="100" Margin="10 20">Prijavi izabranog korisnika</Button>
        <Button Name="btnDelete" Style="{StaticResource buttonStyle}" Foreground="#ffffff" MinHeight="30" MinWidth="100" Margin="10 20">Obriši izabranog korisnika</Button>
    </StackPanel>
</UserControl>
