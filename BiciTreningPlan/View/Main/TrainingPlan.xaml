<UserControl x:Class="BiciTreningPlan.View.Main.TrainingPlan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BiciTreningPlan.View.Main"
             mc:Ignorable="d" 
             d:DesignHeight="569" d:DesignWidth="942"  
             Loaded="UserControl_Loaded">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Right" Margin="10">
            <Button Name="btnGenerate" Click="btnGenerate_Click" Style="{StaticResource buttonStyle}" Height="30" MinWidth="160">Generiši novi trening plan</Button>
        </StackPanel>
        <DataGrid Name="dgTrainingPlan" MouseDoubleClick="dgTrainingPlan_MouseDoubleClick" Margin="10" IsReadOnly="True" ScrollViewer.CanContentScroll="True" 
      VerticalScrollBarVisibility="Auto" CanUserAddRows="False" CanUserDeleteRows="False" SelectionUnit="FullRow" SelectionMode="Single"/>
    </DockPanel>
</UserControl>
