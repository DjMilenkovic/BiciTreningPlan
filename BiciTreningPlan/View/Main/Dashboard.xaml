                        <Label Content="°C" FontSize="28" Foreground="#ffffff"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label Name="lblWindSpeed1" HorizontalContentAlignment="Center" FontSize="16" VerticalAlignment="Center" Foreground="#ffffff" Content="N/A"/>
